<%= form_for @station, url: live_station_path, html: {class: "artist-header"} do |f| %>
  <div class="artist-image">
    <% if @station.cover.attached? %>
      <%= image_tag @station.cover %>
    <% end %>
  </div>
  <div class="artist-info">
    <div class="flex items-center">
      <%= f.text_field :name, class: "input text-header-2 w-auto" %>
      <%= f.button type: :submit, class: "icon-btn ml-2" do %>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
          <path fill-rule="evenodd"
            d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12zm13.36-1.814a.75.75 0 10-1.22-.872l-3.236 4.53L9.53 12.22a.75.75 0 00-1.06 1.06l2.25 2.25a.75.75 0 001.14-.094l3.75-5.25z"
            clip-rule="evenodd" />
        </svg>
      <% end %>
    </div>
    <%= f.file_field :cover, class: "mt-2 inline cursor-pointer text-xsmall file:bg-white file:border-0 file:text-xsmall file:text-secondary hover:file:text-black file:cursor-pointer" %>
  </div>
<% end %>
