<p style="color: green"><%= notice %></p>
<p style="color: red"><%= alert %></p>

<h1>Sign in</h1>

<%= form_with(url: sign_in_path) do |form| %>
  <div>
    <%= form.label :username, style: "display: block" %>
    <%= form.text_field :username, value: params[:username_hint], required: true, autofocus: true, autocomplete: "username" %>
  </div>

  <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.password_field :password, required: true, autocomplete: "current-password" %>
  </div>

  <div>
    <%= form.submit "Sign in" %>
  </div>
<% end %>

<br>


<br>

<div>
  <%= link_to "Sign up", sign_up_path %> |
</div>
